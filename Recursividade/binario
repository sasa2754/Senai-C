#include <stdio.h>
int num, total, modulo, aux;

int binario(int decimal){
    if (decimal>0){
        binario(decimal/2);
        printf("%i", decimal % 2);
    } 
}

int main(){
    int numDecimal;

    printf("Digite um numero decimal: ");
    scanf("%i", &numDecimal);

    if (numDecimal<0){
        printf("Insira um nÃºmero positivo");
    }
    else{
        if(numDecimal==0){
            printf("Numero binario: 0");
        }
        else{
            binario(numDecimal);
        }
    }
    return 0;
}
